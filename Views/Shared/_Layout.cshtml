<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -KOVAN</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>
    <header class="p-3 bg-warning text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                @Html.ActionLink("Kovan", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li>@Html.ActionLink("Hareket Merkezi", "Index", "Home", null, new { @class = "nav-link px-2 text-secondary" })</li>
                    <li>@Html.ActionLink("Depo", "Index", "Depot", null, new { @class = "nav-link px-2 text-white" })</li>
                    <li>@Html.ActionLink("Kalem Envanteri", "Index", "Material", null, new { @class = "nav-link px-2 text-white" })</li>
                </ul>
                <ul class="nav">

                    @{ var controllerName = @ViewContext.RouteData.Values["controller"].ToString();}
                    @{
                        switch (controllerName)
                        {
                            case "Depot":
                                <li class="nav-item">
                                    <a class="px-2 text-white" href="#">Depo Oluştur</a>
                                </li>
                                break;
                            case "Material":
                                <li class="nav-item">
                                    <a class="px-2 text-white" href="#">Kalem Oluştur</a>
                                </li>
                                break;
                            case "home":
                                break;
                        }
                    }

                </ul>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -KOVAN</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)

    <div class="modal fade" tabindex="-1" id="generalModal">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>
</body>
</html>
